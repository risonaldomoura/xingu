<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xingu.inteceleri.xingu.Config_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/txtbimestre"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="      Bimestre"
                android:textColor="?attr/actionModeSplitBackground"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="7dp" />

                    <TextView
                        android:id="@+id/txtclique"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="           Clique para configurar"
                        android:textColor="?android:attr/textColorPrimaryNoDisable" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_config_bimestre"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:textColor="?android:attr/textColorPrimaryNoDisable"
                    android:textSize="14sp"
                    android:visibility="visible" />

            </FrameLayout>

            <TextView
                android:id="@+id/txtconta"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="      Conta"
                android:textColor="?attr/actionModeSplitBackground"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="7dp" />

                    <TextView
                        android:id="@+id/txtcliqueconta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="           Mudar de conta"
                        android:textColor="?android:attr/textColorPrimaryNoDisable" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_mudar_conta"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="14sp"
                    android:visibility="visible" />

            </FrameLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Sobre"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <TextView
                android:id="@+id/txtcontato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Contato:"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TEL: "
                    android:textColor="?attr/colorPrimaryDark" />

                <TextView
                    android:id="@+id/txttel"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" +55 91 988390610"
                    android:autoLink="phone"
                    android:textColor="?attr/colorPrimaryDark" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Email: "
                    android:textColor="?attr/colorPrimaryDark" />

                <TextView
                    android:id="@+id/txtendemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="contato@inteceleri.com.br"
                    android:autoLink="email"
                    android:textColor="?attr/colorPrimaryDark" />

            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/imglogointeceleri"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo_inteceleri" />

            <ImageView
                android:id="@+id/imglogoapp"
                android:layout_width="219dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_logo_centro" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/txtbeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="VersÃ£o Beta"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
